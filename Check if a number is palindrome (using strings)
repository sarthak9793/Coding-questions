//                                                      Check if a number is palindrome (using strings)
// Works for whole numbers only
#include<iostream>
#include<string>
using namespace std;

int palindromeCheck(int num){
    int flag=0;
    string str = to_string(num);
    for(int i=0 ; i<str.length() ; ++i) {
        if(str[i]!=str[str.length()-1])
            flag=1;
            return flag;
    }
    return flag;
}


int main(){
    int x;
    cout<<"Enter a number: ";
    cin>>x;
    int flag = palindromeCheck(x);
    if(flag==0)
        cout<<"Number is a palindrome";
    else 
        cout<<"Number is not a palindrome";
    
}
